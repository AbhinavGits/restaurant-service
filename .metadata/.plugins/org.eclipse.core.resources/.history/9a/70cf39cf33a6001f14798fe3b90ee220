package com.abhinav.interview.coding;

public class Example {
	public static void main(String[] args) {
		int [] listOfIntegers = {1,2,3,5,6,8,19,11,13};
		evenOddArrays(listOfIntegers);
	}
	
	public static void evenOddArrays (int [] listOfIntegers) {
		
		int index =0;
		int [] arr = new int [(listOfIntegers.length)];
		
		for (int i=0; i< listOfIntegers.length; i++) {
			if (listOfIntegers[i] %2 ==0 ) {
				arr[index] = listOfIntegers[i];
				index++;
			}
		}
		
		for (int i=0; i< listOfIntegers.length; i++) {
			if (listOfIntegers[i] %2 != 0 ) {
				arr[index] = listOfIntegers[i];
				index++;
			}
		}
		
		for (int i=0; i<arr.length; i++) {
			System.out.print("The resultant array is "+arr[i]);
		}
	}
}
