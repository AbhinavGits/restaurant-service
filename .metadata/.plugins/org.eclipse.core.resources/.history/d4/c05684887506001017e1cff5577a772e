package com.abhinav.interview.coding.review;

import java.util.Arrays;
import java.util.Comparator;
import java.util.List;
import java.util.Map;
import java.util.function.Function;
import java.util.stream.Collectors;

public class ArraysExample {
	
	public static void main(String[] args) {
		
		int [] arr = {1,2,3,4,6,5,4,2};
		String[] strings = {"Abhinav", "Bob", "Charlie", "Bavi"};
		Map<Integer, Long> intMap = Arrays.stream(arr).boxed().collect(Collectors.groupingBy(Function.identity(),Collectors.counting()));
		System.out.println(intMap);
		
		List<String> array = Arrays.stream(strings).sorted(Comparator.reverseOrder()).collect(Collectors.toList());
		System.out.println(array);
		
		List<String> listOfStrings = Arrays.asList(strings);
		listOfStrings.stream().sorted(Comparator.comparingInt(String::length)
		
	
	}
	

}
