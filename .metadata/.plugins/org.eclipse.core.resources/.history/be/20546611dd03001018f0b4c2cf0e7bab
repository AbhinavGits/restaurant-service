package com.abhinav.intrvw.coding;

import java.util.HashMap;
import java.util.Map;
import java.util.function.Function;
import java.util.stream.Collectors;

public class CodingExample1 {

	public static void main(String[] args) {
		
		String str1 = "abcdABCDabcd";
		char[] charArray = str1.toCharArray();
		
		Map<String,Integer> charMap = str1.chars().mapToObj(ch -> (char) ch).collect(Collectors.groupingBy(Function.identity(),Collectors.counting()));
		
		int count = 0;
		Map<Character,Integer> charMap = new HashMap<Character, Integer>();
		for (int i=0; i<charArray.length; i++) {
			char ch = charArray[i];
			charMap.put(ch, count);
		}
		
		System.out.println(charMap);
	}

}

//How do you get distinct characters and their count in a string in Java?
//INPUT: str1 = "abcdABCDabcd"
//OUTPUT:
//{a=2, A=1, b=2, B=1, c=2, C=1, d=2, D=1}

Write a method to return the second largest element in an integer array passed as an input parameter
