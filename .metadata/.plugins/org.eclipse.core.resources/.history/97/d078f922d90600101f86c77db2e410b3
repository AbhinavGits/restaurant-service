package com.abhinav.intrvw.coding;

import java.util.Arrays;
import java.util.Comparator;
import java.util.List;
import java.util.Optional;
import java.util.stream.Stream;

public class CodingPractice1 {

	public static void main(String[] args) {

		List<Integer> numbers = Arrays.asList(10, 20, 5, 30, 25, 30, 20);
		
		int max = Integer.MIN_VALUE;
		int secondMax = Integer.MIN_VALUE;
		
		for (Integer number: numbers) {
			if (number>max) {
				secondMax = max; // update secondMax to hold previous max value
				max = number; // update max to new highest
			} else if(number>secondMax && number<max) {
				secondMax = number;
			}
		}
		System.out.println(secondMax);
		
		Optional<Integer> limit = numbers.stream().distinct().sorted(Comparator.reverseOrder()).skip(1).limit(1).findFirst();
	}

}
